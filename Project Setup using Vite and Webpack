Project Setup Using Webpack
mkdir webpack-project
cd webpack-project
npm init -y
npm install --save-dev webpack webpack-cli webpack-dev-server
npm install --save-dev babel-loader @babel/core @babel/preset-env
webpack-project/
 â”œâ”€â”€ src/
 â”‚   â””â”€â”€ index.js
 â”œâ”€â”€ dist/
 â”‚   â””â”€â”€ index.html
 â”œâ”€â”€ webpack.config.js
 â””â”€â”€ package.json
Basic webpack.config.js
const path = require('path');

module.exports = {
  entry: './src/index.js',
  output: {
    filename: 'bundle.js',
    path: path.resolve(__dirname, 'dist')
  },
  mode: 'development',
  devServer: {
    static: './dist',
    port: 3000
  },
  module: {
    rules: [
      {
        test: /\.js$/,
        exclude: /node_modules/,
        use: 'babel-loader'
      }
    ]
  }
};
Add Scripts (package.json)
"scripts": {
  "start": "webpack serve",
  "build": "webpack"
}
npm run start
npm run build
